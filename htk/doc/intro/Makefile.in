include @TOP@/mk/latex.mk

PACKAGES = uni-htk

SRCSLHS       = Mainsimple1.lhs \
                Mainsimple2.lhs \
		Mainlist.lhs \
	        Mainentry.lhs\
		Mainmenu.lhs \
                MainhsMines.lhs

include @TOP@/mk/boilerplate.mk

dochere : intro.pdf intro.ps

# dvi/ps does not depend on img/hsMines/screenshotXX.eps because
# otherwise make tries to remake them from .png's, which fails 
# because of too many colours and breaks the .eps files -- sigh.
intro.dvi: intro.bbl img/intro-title.eps img/screenshot-tixwidgets.eps 

intro.pdf: intro.bbl img/intro-title.png img/screenshot-tixwidgets.eps img/hsMines/screenshot01.png img/hsMines/screenshot02.png img/hsMines/screenshot03.png img/hsMines/screenshot04.png img/hsMines/screenshot05.png 

.PHONY : displaytheseexports

displayexportshere : displaytheseexports

displaytheseexports :
	@PWD=`pwd`;echo $$PWD/*.lhs $$PWD/intro.tex $$PWD/intro.bib $$PWD/intro.pdf $$PWD/intro.ps $$PWD/img/Screenshot*.eps $$PWD/img/Screenshot*.png $$PWD/img/intro-title.png
