<!ATTLIST development %label-matter;
                      %title-matter;
                      %formalism-matter;
                      %attributes;>
<?MMiSSDisplay development : Blue box ?>


<!ELEMENT script  (%conceptualAtom; | step | script
                   | includeStep | includeScript)+>
<!ATTLIST script %label-matter;
                 %title-matter;
                 %formalism-matter;
                 %attributes;>
<?MMiSSDisplay development : Blue box ?>

<!ELEMENT programFragment  (#PCDATA)>
<!ATTLIST programFragment %label-matter;
                          %title-matter;
                          %formalism-matter;
                          %attributes;>
<?MMiSSDisplay programFragment : Blue ellipse ?>

<!ELEMENT clause  (#PCDATA)>
<!ATTLIST clause %label-matter;
                 %title-matter;
                 %formalism-matter;
                 %attributes;>
<?MMiSSDisplay clause : Blue ellipse ?>


<!ELEMENT step  (#PCDATA)>
<!ATTLIST step %label-matter;
               %title-matter;
               %formalism-matter;
               %attributes;>
<?MMiSSDisplay step : Blue ellipse ?>



