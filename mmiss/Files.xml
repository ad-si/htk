<!-- Describes the file-types available to MMiSS.  This file should be
     written according to the DTD in MMiSSFiles.dtd. -->
<fileTypes>
<fileType tag="gif" menu="xvmenu" colour="red"/>
<fileType tag="jpeg" menu="xvmenu" colour="green"/>
<fileType tag="png" menu="xvmenu" colour="blue"/>
<fileType tag="pdf" menu="pdfmenu" colour="yellow"/>
<menu id="xvmenu">
   <command title="view" command="xv %F"/>
   <separator/>
   <subMenu menu="variants"/>
   <subMenu menu="permissions"/>
</menu>
<menu id="pdfmenu">
   <command title="view" command="xpdf %F"/>
   <separator/>
   <subMenu menu="variants"/>
   <subMenu menu="permissions"/>
</menu>
<menu id="variants" title="Variants">
   <displayVariants title="Display"/>
   <selectVariants title="Select"/>
</menu>
<menu id="permissions" title="Permissions">
   <editPermissions title="Edit"/>
   <viewAllPermissions title="View All"/>
</menu>
</fileTypes>