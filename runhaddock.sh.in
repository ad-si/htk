#!/bin/sh
if test -d @TOP@/www/ghc/html
then
   chmod -R u+w @TOP@/www/ghc/html
   rm -rf @TOP@/www/ghc/html
fi
if test -n "@GHCHTML@"
then
@MKDIR@ -p @TOP@/www/ghc
@CP@ -r @GHCHTML@ @TOP@/www/ghc/html
else
@MKDIR@ -p @TOP@/www/ghc/html
fi

# GHCDOCS should point to the HTML 
gmake haddock
gmake haddock # pick up forward references
gmake haddockgenindex 
   # generate the complete index (at least, it will, when Simon Marlow 
   # has fixed the relevant Haddock bug).